
<h1>Welcome to session {{session.session}}</h1>
{{#if session.imageSession}}
  <img src="{{session.imageSession}}" alt="Workout Motivation" width="300">
{{else}}
  <p>This session doesn't have an image</p>
{{/if}}
<br>
<h4>Education: </h4>
<p>{{session.education}}</p> <br>
<h4>Tips: </h4>
<p>{{session.tips}}</p> <br>
<h4>Progress:</h4>

<form action="/session/{{session._id}}/{{session.session}}" method="post"> 

        <label for="">Session</label>
        <input type="Number" name="session" id="" value={{session.session}}><br>

        <label for="">Calories : 2000 cal</label>
        <input type="Number" name="calories" id=""><br>

        <label for="">Water : 8 glasses</label>
        <input type="Number" name="water" id=""><br>

        <label for="">Sleep : 8 hours/day</label>
        <input type="Number" name="sleep" id="" ><br>

        <label for="">Exercise : 60 minutes</label>
        <input type="Number" name="exercise" id=""><br>

        <button type="submit">Add session </button>
</form>

<h4>Add Feedback {{session._id}}</h4>
<form action="/feedback/{{session._id}}/add-review" method="POST">   
    <textarea name="comment" id="" cols="30" rows="10"></textarea>
    <button type="submit">Add</button>
</form>
